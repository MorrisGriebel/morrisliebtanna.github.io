        let currentDay = 0;

        function loadImages(day) {
            const imageContainer = document.getElementById('imageContainer');
            imageContainer.innerHTML = '';
            const images = imageSets[day];
            images.forEach(image => {
                const imgElement = document.createElement('img');
                imgElement.src = image.replace('/view?', '/uc?');
                imageContainer.appendChild(imgElement);
            });
        }

        function checkAnswer() {
            const answer = document.getElementById('answer').value.toLowerCase();
            const correctAnswer = "lösungswort"; // Ersetzen durch das tatsächliche Lösungswort

            const message = document.getElementById('message');
            if (answer === correctAnswer) {
                message.style.color = 'green';
                message.textContent = "Richtig! Du hast das Rätsel gelöst.";
                currentDay++;
                if (currentDay < imageSets.length) {
                    loadImages(currentDay);
                } else {
                    message.textContent = "Glückwunsch! Du hast alle Rätsel gelöst!";
                }
            } else {
                message.style.color = 'red';
                message.textContent = "Leider falsch, versuch es noch einmal!";
            }
        }

        loadImages(currentDay); // Initiale Bilder laden
    </script>
